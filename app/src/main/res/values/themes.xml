<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LockV01" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">#1D3557</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <!-- Active thumb color & Active track color(30% transparency) -->
        <item name="colorControlActivated">#E63946</item>
        <!-- Inactive thumb color -->
        <item name="colorSwitchThumbNormal">#E63946</item>
        <!-- Inactive track color(30% transparency) -->
        <item name="android:colorForeground">#E63946</item>
    </style>
</resources>